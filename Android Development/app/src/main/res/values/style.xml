<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Bold">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="Text.SemiBold">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>

    <style name="Text.Medium">
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="Text.Regular">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Text.Bold.H1">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Bold.H2">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Bold.H3">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Medium.Subheader">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Regular.Subheader">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.SemiBold.Title">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Regular.Title">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Regular.Subtitle">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Text.Bold.H1.Center">
        <item name="android:gravity">center</item>
    </style>

    <style name="Text.SemiBold.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Text.Medium.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Text.SemiBold.Title.Center">
        <item name="android:gravity">center</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Button.RoundedSmall">
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Small</item>
    </style>

    <style name="Button.RoundedSmall.SemiBold">
        <item name="android:textAppearance">@style/Text.SemiBold.Button</item>
    </style>

    <style name="Button.RoundedSmall.Medium">
        <item name="android:textAppearance">@style/Text.Medium.Subheader</item>
    </style>

</resources>