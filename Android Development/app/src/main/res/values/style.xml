<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Bold">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="Text.SemiBold">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>

    <style name="Text.Bold.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Text.SemiBold.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Text.SemiBold.Button</item>
    </style>

    <style name="Button.RoundedSmall">
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Small</item>
    </style>
</resources>